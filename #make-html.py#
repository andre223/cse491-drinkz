#! /usr/bin/env python

import os
import drinkz.db
import drinkz.recipes

drinkz.db_reset_db()

drinkz.db.add_bottle_type('Johnnie Walker', 'black label', 'blended scotch')
drinkz.db.add_to_inventory('Johnnie Walker', 'black label', '500 ml')

